<!-- app/views/layouts/application.html.erb -->
<!DOCTYPE html>
<html>
  <head>
    <title>Course Evaluation Helper | University of Chicago</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
      /* University of Chicago Colors */
      :root {
        --uchicago-maroon: #800000;
        --uchicago-maroon-dark: #4F0000;
        --uchicago-maroon-light: #A8383B;
        --uchicago-gray: #767676;
        --uchicago-light-gray: #F5F5F5;
      }
      
      /* Custom Bootstrap overrides */
      .bg-uchicago {
        background-color: var(--uchicago-maroon) !important;
      }
      
      .btn-primary {
        background-color: var(--uchicago-maroon);
        border-color: var(--uchicago-maroon);
      }
      
      .btn-primary:hover {
        background-color: var(--uchicago-maroon-dark);
        border-color: var(--uchicago-maroon-dark);
      }
      
      .btn-info {
        background-color: #007C92;
        border-color: #007C92;
        color: white;
      }
      
      .btn-info:hover {
        background-color: #005E70;
        border-color: #005E70;
        color: white;
      }
      
      .btn-secondary {
        background-color: var(--uchicago-gray);
        border-color: var(--uchicago-gray);
      }
      
      .btn-success {
        background-color: #0A8754;
        border-color: #0A8754;
      }
      
      .btn-warning {
        background-color: #F5B700;
        border-color: #F5B700;
        color: #212529;
      }
      
      .card-header {
        background-color: var(--uchicago-light-gray);
        border-bottom: 2px solid var(--uchicago-maroon);
        font-weight: 500;
      }
      
      h1, h2, h3, h4, h5, h6 {
        color: var(--uchicago-maroon);
      }
      
      .navbar-brand {
        font-weight: bold;
      }
      
      .footer {
        background-color: var(--uchicago-light-gray) !important;
        border-top: 4px solid var(--uchicago-maroon);
      }
      
      .nav-link.active {
        font-weight: bold;
      }
      
      .table thead {
        background-color: var(--uchicago-light-gray);
      }
      
      .display-4, .display-5, .display-6 {
        color: var(--uchicago-maroon);
      }
      
      .alert-success {
        border-left: 4px solid #0A8754;
      }
      
      .alert-danger {
        border-left: 4px solid var(--uchicago-maroon-light);
      }
    </style>
  </head>

  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-uchicago mb-4">
      <div class="container">
        <%= link_to "Course Evaluation Helper", "/", class: "navbar-brand" %>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item">
              <%= link_to "Home", "/", class: "nav-link #{current_page?('/') ? 'active' : ''}" %>
            </li>
            <li class="nav-item">
              <%= link_to "Courses", "/course_evaluations", class: "nav-link #{request.path.include?('/course_evaluations') ? 'active' : ''}" %>
            </li>
          </ul>
        </div>
          Booth School of Business
        </div>
      </div>
    </nav>

    <div class="container">
      <% if notice %>
        <div class="alert alert-success"><%= notice %></div>
      <% end %>
      <% if alert %>
        <div class="alert alert-danger"><%= alert %></div>
      <% end %>

      <%= yield %>
    </div>

    <footer class="footer mt-5 py-3">
      <div class="container text-center">
        <img src="https://communications.uchicago.edu/sites/default/files/inline-images/shield_2.png" alt="University of Chicago Shield" height="40" class="mb-2">
        <div>
          <span class="text-muted">Course Evaluation Helper | The University of Chicago Booth School of Business &copy; <%= Date.today.year %></span>
        </div>
      </div>
    </footer>
    
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
